<%- include('../partials/head') %>
<body>
  <%- include('../partials/nav') %>
  
  
  <main class="container mx-auto bg-white shadow-lg rounded-lg  mt-10 max-w-xl">
    <div class="bg-white shadow-lg rounded-lg p-8 mt-10 max-w-xl w-full">
      <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Register your home on AirBnb</h1>
      
      <form method="POST" action="/host/addHome" name="frmAdd" class="space-y-6">
        <!-- House Name Input -->
        <div>
          
          <input 
            type="text" 
            name="houseName" 
            id="houseName" 
            placeholder="Enter your house name" 
            class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2  focus:ring-red-500"
          /></br>
          <input 
            type="text" 
            name="price" 
            id="price" 
            placeholder="Enter price per night" 
            class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2  focus:ring-red-500"/></br>
            <input 
            type="text" 
            name="location" 
            id="location" 
            placeholder="Enter location" 
            class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2  focus:ring-red-500"/></br>
            <input 
            type="text" 
            name="rating" 
            id="rating" 
            placeholder="Enter rating" 
            class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2  focus:ring-red-500"/></br>
            <input 
            type="text" 
            name="photoUrl" 
            id="photoUrl" 
            placeholder="Enter photoUrl" 
            class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2  focus:ring-red-500"/></br>
            
          <input 
          type="submit" 
          value="Submit" 
          class="w-full bg-red-500 text-white p-3 rounded-md cursor-pointer hover:bg-red-500 focus:outline-none focus:ring-2 focus:ring-red-300 transition duration-300 ease-in-out"
        />
        
        </div>
        
        <!-- Submit Button -->
       
         
      </form>
    </div>
  </main>
  
</body>
</html>