
<%- include('../partials/head') %>
<body>
  <%- include('../partials/nav') %>
  <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-xl">
    <h2 class="text-5xl text-gray-800 font-bold text-center mb-6">
      Here are your Favourites    </h2>
    
    <!-- List of registered homes -->
    <ul class="space-y-4">
      <% registerdHomes.forEach(home => { %>
        <li class="bg-white p-6 rounded-lg shadow-lg hover:bg-gray-100 transition-all duration-300">
          <!-- House Name -->
          <div class="flex items-center justify-between mb-4">
            <span class="text-2xl text-gray-800 font-semibold"><%= home.houseName %></span>
            <span class="text-xl font-semibold text-indigo-600">₹<%= home.price %>/month</span>
          </div>
          
          <!-- Image Section -->
          <img class="w-full h-48 object-cover rounded-md mb-4" src="<%= home.photoUrl %>" alt="<%= home.houseName %>">
    
          <!-- Location -->
          <p class="text-gray-600 mb-2"><span class="font-semibold text-indigo-600">Location:</span> <%= home.location %></p>
    
          <!-- Rating -->
          <div class="flex items-center mb-4">
            <span class="text-yellow-400">★</span>
            <span class="ml-2 text-gray-700 font-semibold"><%= home.rating %> / 5</span>
          </div>
    
          <!-- Book Now Button -->
          <button class="w-full bg-indigo-600 text-white py-2 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition duration-300">
            Book Now
          </button>
        </li>
      <% }) %>
    </ul>
    
  </main>
  
</body>
</html>